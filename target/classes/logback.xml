<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <property resource="properties/operations.properties" />
    <!-- 管控台日志打印，发布生产需注释 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder charset="utf-8"> <!-- encoder 可以指定字符集，对于中文输出有意义 -->
            <!-- %.-1level 只显示信息级别的首字母,%-5level 左对齐显示信息级别全称 -->
            <!-- 如需自定义关键字，用 %mdc{键名} 表示,程序中用MDC.put("键名","键值")设置，可动态设置 [%logger:%line]-->
            <Pattern>[%date{yyyy-MM-dd HH:mm:ss}][%-4level][%line][%thread] traceLogId:[%X{TRACE_LOG_ID}] dstTraceId:[%X{DST_TRACE_ID}]call [%logger][%method]  %msg%n</Pattern>
        </encoder>
    </appender>

    <!-- 系统日志打印 -->
    <appender name="logfile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>shiro.log</File>
        <encoder>
            <Pattern>[%date{yyyy-MM-dd HH:mm:ss}][%-4level][%line][%thread] traceLogId:[%X{TRACE_LOG_ID}] dstTraceId:[%X{DST_TRACE_ID}]call [%logger][%method]  %msg%n</Pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>shiro.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <TimeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>512MB</maxFileSize>
            </TimeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>

    <logger name="com.ibatis" level="info"/>
    <logger name="org.springframework" level="info"/>
    <logger name="java.sql.PreparedStatement" level="info"/>
    <logger name="org.springframework.com.xiaofei.test.web.servlet.DispatcherServlet" level="info"/>
    <logger name="com.ibatis.sqlmap.engine.impl.SqlMapClientDelegate" level="info"/>
    <logger name="java.sql" level="info"/>
    <logger name="org.apache.commons" level="info"/>
    <logger name="java.sql.Statement" level="info"/>
    <logger name="org.springframework.com.xiaofei.test.web.context.support.XmlWebApplicationContext" level="info"/>
    <logger name="com.ibatis.com.xiaofei.test.common.jdbc.SimpleDataSource" level="info"/>
    <logger name="org.springframework.com.xiaofei.test.web.servlet.handler.SimpleUrlHandlerMapping" level="info"/>
    <logger name="java.sql.ResultSet" level="info"/>
    <logger name="java.sql.Connection" level="info"/>
    <logger name="com.ibatis.com.xiaofei.test.common.jdbc.ScriptRunner" level="info"/>
    <logger name="org.jdbcdslog" level="info"/>
    <logger name="org.quartz.impl.jdbcjobstore.JobStoreSupport" level="error"/>

    <!-- 输出到控制台和文件，可定义更多的 Appender -->
    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>